<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="291dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="207dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorWhite"
        android:src="@drawable/chatbot"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Hey I am Zen, I'm your course assistant "
        android:textAlignment="center"
        android:textColor="@color/darkerGrey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/select_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select one of the courses below"
        android:textColor="@color/darkerGrey"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/main_273_01_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="22dp"
        android:background="@drawable/chatbot_rounded_corner_box"
        android:paddingBottom="18dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:text="CMPE 273-01"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/select_courses"
        app:layout_constraintTop_toBottomOf="@+id/select_courses" />

    <Button
        android:id="@+id/main_272_02_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:background="@drawable/chatbot_rounded_corner_box"
        android:paddingBottom="18dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:text="CMPE 272-02"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/select_courses"
        app:layout_constraintStart_toEndOf="@+id/main_273_01_button"
        app:layout_constraintTop_toBottomOf="@+id/select_courses" />


</android.support.constraint.ConstraintLayout>
